# Configuration Base de données Neon
DATABASE_URL="postgresql://user:password@your-neon-db-host.aws.neon.tech/dbname?sslmode=require"
DIRECT_URL="postgresql://user:password@your-neon-db-host.aws.neon.tech/dbname?sslmode=require"

# Configuration de l'application
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Bingoo

# Configuration PayPal
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_SECRET=your_paypal_secret
NEXT_PUBLIC_PAYPAL_MODE=live

# Configuration des jeux
NEXT_PUBLIC_MIN_POINTS_CLASSIC=0
NEXT_PUBLIC_MAX_POINTS_CLASSIC=100
NEXT_PUBLIC_MIN_POINTS_MAGIC=50
NEXT_PUBLIC_MAX_POINTS_MAGIC=200
NEXT_PUBLIC_MIN_POINTS_GOLD=100
NEXT_PUBLIC_MAX_POINTS_GOLD=500

# Taux de gain par jeu
NEXT_PUBLIC_WIN_RATE_CLASSIC=0.40
NEXT_PUBLIC_WIN_RATE_MAGIC=0.30
NEXT_PUBLIC_WIN_RATE_GOLD=0.20

# Configuration de sécurité
ADMIN_TREASURY_MULTIPLIER=4
POINTS_EXPIRY_DAYS=30
MAX_DAILY_GAMES=100
